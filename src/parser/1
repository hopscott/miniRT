#include "minirt.h"

void	free_camera(t_camera **cam_ptr)
{
	t_camera	*camera;

	camera = *cam_ptr;
	if (camera->xyz)
		free(cam->xyz);
	if (camera->norm)
		free(camera->norm);
	free(camera);
}

void	free_ambient(t_ambient **amb_ptr)
{
	t_ambient	*ambient;

	ambient = *amb_ptr;
	if (ambient->rgb)
		free(ambient->rgb);
	free(ambient);
}

void	free_lights(t_light **lights_ptr)
{
	t_light	*light;
	t_light	*tmp;

	light = *lights_ptr;
	while (light)
	{
		if (light->xyz)
			free(light->xyz);
		if (light->rgb)
			free(light->rgb);
		tmp = light;
		light = light->next;
		free(tmp);
	}

}

void	free_space(t_space **space_bef)
{
	t_space	*space;

	space = *space_bef;
	if (space)
	{
		if (space->camera)
			free_camera(&(space->camera));
		if (space->ambient)
			free_ambient(&(space->ambient));
		if (space->objects)
			obj_lstfree_sub(&(space->objects));
		if (space->lights)
			free_lights(&(space->lights));
		free(space);
		space = NULL;
	}
}
