}

void	cy_init_cam_center(t_camera *camera, t_obj_lst **objs)
{
	t_obj_lst	*elem;
	t_obj_lst	*next;
	t_object	*obj;
	double		cy_vec_mag;

	if (objs && *objs)
	{
		elem = *objs;
		while (elem)
		{
			next = elem->next;
			if (elem->content && elem->type == CYLINDER)
			{
				obj = (t_object *)(elem->content);
				cy_vec_mag = get_vec_mag(obj.cy->vec_x, obj.cy->vec_y, obj.cy->vec_z); 
				init_cy_params(cylinder, camera);
			}



		}
	}
}
