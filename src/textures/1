int	sub_get_uv(t_vec3 **tmp, t_vec3 *norm, t_vec3 **e1)
{
	*e1 = vec3_unit(vec3_cross(plane->norm, *tmp), 1);
	if (!*e1)
		return (free(*tmp), 2);
	free(*tmp);
	if (check_vec3_null(e1))
		return (free(*e1), 1);
	return (0);
}

